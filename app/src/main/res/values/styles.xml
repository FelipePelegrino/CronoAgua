<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextViewBase">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">@dimen/base_margin_elements</item>
        <item name="android:layout_marginEnd">@dimen/base_margin_elements</item>
        <item name="android:layout_marginStart">@dimen/base_margin_elements</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/secondary_details</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="EditTextBase">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">@dimen/base_margin_elements</item>
        <item name="android:layout_marginStart">@dimen/base_margin_elements</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:backgroundTint">@color/secondary_details</item>
    </style>

    <style name="TextViewWaterFragment">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginEnd">@dimen/base_margin_elements_water_fragment</item>
        <item name="android:layout_marginStart">@dimen/base_margin_elements_water_fragment</item>
        <item name="android:padding">@dimen/base_padding_water_fragment</item>
        <item name="android:textSize">13sp</item>
        <item name="android:backgroundTint">@color/secondary_details</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
</resources>